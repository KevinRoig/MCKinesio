<section class="second_section" id="contact">
    <h2>Contact</h2>
    <div>
        <p>Pour me contacter, merci de remplir le formulaire suivant. <br>
            Je reviendrai vers vous dès que possible.</p>
    </div>
    <div class="form_container">
        <div class="form">
            {{ form_start(form) }}
            <div class=" nom_prenom">
                <div class=" nom">
                    {{form_errors(form.nom) }}
                    {{form_label(form.nom) }}
                    {{form_widget(form.nom) }}
                </div>
                <div class=" prenom">
                    {{form_errors(form.prenom) }}
                    {{form_label(form.prenom) }}
                    {{form_widget(form.prenom) }}
                </div>
            </div>

            <div class=" telephone_email">
                <div class=" telephone">
                    {{form_errors(form.telephone) }}
                    {{form_label(form.telephone) }}
                    {{form_widget(form.telephone) }}
                </div>
                <div class=" email">
                    {{form_errors(form.email) }}
                    {{form_label(form.email) }}
                    {{form_widget(form.email) }}
                </div>
            </div>

            <div class=" message">
                {{form_errors(form.message) }}
                {{form_label(form.message) }}
                {{form_widget(form.message) }}
            </div>

            {{ form_row(form._token) }}
            <div id="contact_button_container">
                <button type="submit" class="lined thick" id="form_button">{{ button_label|default('Envoyer la demande')
                    }}</button>
            </div>

            {{form_end(form) }}
        </div>
    </div>
</section>
{% endblock %}